{
  "name": "lumina-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:ext\" \"npm run dev:server\" --names \"EXT,API\" --prefix-colors \"blue,magenta\"",
    "dev:ext": "cd extension && npm run dev",
    "dev:server": "cd server && node index.js",
    "build:ext": "cd extension && npm run build",
    "install:all": "npm install && cd extension && npm install && cd server && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
